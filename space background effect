<div id="aimbridge-3d-bg" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; pointer-events: none; background: #0a0a0a;"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('aimbridge-3d-bg');
    
    // Setup Three.js Scene
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
    
    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
    container.appendChild(renderer.domElement);

    // Create Particles (PRESERVED: 1500 particles)
    const particlesCount = 1500;
    const posArray = new Float32Array(particlesCount * 3);
    
    for(let i=0; i < particlesCount * 3; i++) {
        posArray[i] = (Math.random() - 0.5) * 10;
    }

    const particlesGeometry = new THREE.BufferGeometry();
    particlesGeometry.setAttribute('position', new THREE.BufferAttribute(posArray, 3));

    // Styling (PRESERVED: 0.008 size and #007bff color)
    const particlesMaterial = new THREE.PointsMaterial({
        size: 0.008,
        color: '#007bff', 
        transparent: true,
        opacity: 0.8,
        blending: THREE.AdditiveBlending
    });

    const particlesMesh = new THREE.Points(particlesGeometry, particlesMaterial);
    scene.add(particlesMesh);
    camera.position.z = 3;

    // IMPROVED Interaction Logic
    let mouseX = 0;
    let mouseY = 0;

    window.addEventListener('mousemove', (event) => {
        mouseX = (event.clientX / window.innerWidth) - 0.5;
        mouseY = (event.clientY / window.innerHeight) - 0.5;

        // 1. Rotation (Preserved but smoothed)
        gsap.to(particlesMesh.rotation, {
            y: mouseX * 0.6,
            x: -mouseY * 0.6,
            duration: 1.5,
            ease: "power2.out"
        });

        // 2. NEW: Depth Parallax (The "Interactive" upgrade)
        // Camera moves slightly to make it feel like you're looking behind the particles
        gsap.to(camera.position, {
            x: mouseX * 1.5,
            y: -mouseY * 1.5,
            duration: 2,
            ease: "power2.out"
        });

        // 3. NEW: Pulse on movement speed
        // Particles grow slightly when you flick the mouse fast
        const movementSpeed = Math.abs(event.movementX) + Math.abs(event.movementY);
        if(movementSpeed > 10) {
            gsap.to(particlesMaterial, {
                size: 0.012, 
                duration: 0.3,
                onComplete: () => gsap.to(particlesMaterial, { size: 0.008, duration: 0.5 })
            });
        }
    });

    // Handle Window Resize
    window.addEventListener('resize', () => {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    });

    // Animation Loop (PRESERVED: Original rotation speeds)
    const animate = () => {
        requestAnimationFrame(animate);
        particlesMesh.rotation.y += 0.001;
        particlesMesh.rotation.x += 0.0005;
        renderer.render(scene, camera);
    };

    animate();
});
</script>

<style>
#aimbridge-3d-bg canvas {
    display: block;
}
#aimbridge-3d-bg::after {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle at center, transparent 0%, rgba(10, 10, 10, 0.4) 100%);
}
</style>
